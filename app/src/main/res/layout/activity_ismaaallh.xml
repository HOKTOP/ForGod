<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.ismaaallh">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/namesofAllah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/changa_bold"
                android:text="@string/namesofAllah"
                android:gravity="center"
                android:layout_margin="2dp"
                android:textColor="@color/colorAccent"
                android:shadowColor="@color/colorPrimary"
                android:shadowDx="-2"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:textSize="24sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/namesofAllah"
                android:layout_marginTop="2dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/intro"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:fontFamily="@font/changa_light"
                    android:textColor="@color/colorAccent"
                    android:shadowColor="@color/colorPrimary"
                    android:shadowDx="-2"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:text="@string/ProphetSaid"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:fontFamily="@font/changa_light"
                    android:text="@string/namesofAllahHadith"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_below="@+id/intro"
                android:textSize="20sp"
                android:gravity="center"
                android:fontFamily="@font/changa_bold"
                android:text="@string/namesList"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>